<% users.each do |user| %>
    <div class="container-child col-md-2 col-md-4 col-xs-6">
        <%= profile_img(user) %>
        <% if user.id != current_user.id %>
            <li>
                <div class="item">
                    <%= link_to "#{user.name}", user_path(user) %>

                </div>
                <%= render 'follow_form', user: user %>
            </li>
        <% else %>
            <li>
                <div class="item">
                    <%= link_to "#{user.name}", user_path(user) %>
                </div>
            </li>
        <% end %>
    </div>
<% end %>
