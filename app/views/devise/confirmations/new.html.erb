<div class="container">
    <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
        <h2>アカウント確認メール再送</h2>

        <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
                <%= f.email_field :email, autofocus: true, placeholder: :email, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control" %>
            </div>

            <div class="actions">
                <%= f.submit "アカウント確認メール再送", class: "btn btn-primary btn-block" %>
            </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>
