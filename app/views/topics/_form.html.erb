<%= form_for(@topic) do |f| %>
    <%= f.error_messages! %>
    <%= topic_img(@topic) if topic_img(@topic) %>
    <%= f.file_field :image, class: 'btn btn-info btn-block' %>
    <br>
    <%= f.label :content %>
    <%= f.text_area :content, size: "50x5", class: 'form-control', placeholder: :content %>
    <br>
    <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>
